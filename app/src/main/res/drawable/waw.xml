<?xml version="1.0" encoding="utf-8"?>

    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval">

        <!-- Define the solid color -->
        <solid android:color="@color/mlue" />

        <!-- Define the size of the circle -->
        <size
            android:width="100dp"
            android:height="90dp" />

        <!-- Clip the shape to half-circle -->
        <clip>
            <shape android:shape="rectangle">

                <size
                    android:width="100dp"
                    android:height="50dp" />
            </shape>
        </clip>
    </shape>
